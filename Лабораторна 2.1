from scipy.misc import derivative

def f(x):
     return 3*x**4 - 4*x**3 + 2*x**2 - 4*x - 1
a = 1.5
b = -1.5
eps = 0.001 
def hord(a,b,eps):
    if abs(b-a)<eps:
        print('кореня немає')
        return
    if(f(a)*derivative(f,a,n=2)):
        xi = b
        x0=a
    else:
        xi = a
        x0=b
    xi_1=xi-(xi-x0)*f(xi)/(f(xi)-f(x0))
    while(abs(xi_1-xi)>eps):
        xi=xi_1
        xi_1=xi-(xi-x0)*f(xi)/(f(xi)-f(x0))
    else:
        print(f'Коріньзнаходиться в точці x =',xi_1)
hord(a,b,eps)
